	keywords = {Climate change,Freezing,Frost resistance,Phenology,Phylogeny,Plant-climate interactions,Rocky Mountain Biological Laboratory},
	number = {1},
	pages = {55--64},
	title = {{Frost sensitivity of leaves and flowers of subalpine plants is related to tissue type and phenology}},
	volume = {104},
