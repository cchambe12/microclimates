@article{Ault2013,
	abstract = {Phenology---the study of recurring plant and animal life cycle stages, especially their timing and relationships with weather and climate---is becoming an essential tool for documenting, communicating, and anticipating the consequences of climate variability and change. For example, March 2012 broke numerous records for warm temperatures and early flowering in the United States [Karl et al., 2012; Elwood et al., 2013]. Many regions experienced a ``false spring,'' a period of weather in late winter or early spring sufficiently mild and long to bring vegetation out of dormancy prematurely, rendering it vulnerable to late frost and drought.},
