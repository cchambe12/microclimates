	journal = {Forest Ecology and Management},
	keywords = {Bud burst, Bud set, Assisted migration, , Boreal forest, Common garden, Climate change, Provenances},
	pages = {21-26},
	title = {From phenology to forest management: Ecotypes selection can avoid early or late frosts, but not both},
	url = {https://www.sciencedirect.com/science/article/pii/S0378112718321868},
