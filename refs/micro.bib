	journal = {Ecological Monographs},
	number = {4},
	pages = {557--585},
	publisher = {Ecological Society of America},
	title = {{A method for scaling vegetation dynamics: The Ecosystem Demography Model (ED)}},
	url = {http://www.jstor.org/stable/3100036},
