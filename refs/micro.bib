	pmid = {25346748},
	title = {{The interaction between freezing tolerance and phenology in temperate deciduous trees.}},
	url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=4192447{\{}{\&}{\}}tool=pmcentrez{\{}{\&}{\}}rendertype=abstract},
	volume = {5},
