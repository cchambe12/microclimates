	doi = {10.1007/s00442-012-2580-9},
	isbn = {0029-8549},
	issn = {00298549},
	journal = {Oecologia},
	keywords = {Budset,Common garden,Elevational gradients,Genecology,Leaf unfolding},
	number = {3},
	pages = {663--678},
	pmid = {23306445},
	title = {{Elevational adaptation and plasticity in seedling phenology of temperate deciduous tree species}},
	volume = {171},
	year = {2013},
	Bdsk-Url-1 = {http://dx.doi.org/10.1007/s00442-012-2580-9}}

