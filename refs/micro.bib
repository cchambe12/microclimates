	doi = {10.1371/journal.pone.0020155},
	journal = {PLOS ONE},
	month = {05},
	number = {5},
	pages = {1-13},
	publisher = {Public Library of Science},
	title = {Climate Change Affects Winter Chill for Temperate Fruit and Nut Trees},
