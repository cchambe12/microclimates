	number = {5},
	pages = {1470-1481},
	title = {Local temperatures inferred from plant communities suggest strong spatial buffering of climate warming across Northern Europe},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.12129},
	volume = {19},
