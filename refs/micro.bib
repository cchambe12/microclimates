	keywords = {species distribution modelling, microclimate, remote sensing},
	number = {7},
	pages = {1267-1279},
	title = {Incorporating microclimate into species distribution models},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ecog.03947},
